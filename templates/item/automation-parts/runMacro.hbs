<div>

  <div class="form-group ">
    <label for="system.automations.{{key}}.macro">{{localize "DOCUMENT.Macro"}}</label>
    <input type="text" name="system.automations.{{key}}.macro" value="{{automation.macro}}">

  </div>
  <div class="tip">
    {{#if automation.macro}}
    <label class="hint">
      <a class='automation-open-macro' data-action="automationCommand" data-command='viewAutomationMacro'>
        <i class="fa-solid fa-arrow-up-right-from-square"></i>
        {{localize 'INVINCIBLE.Automation.FIELDS.macro.open'}}
      </a>
    </label>
    {{else}}
    <label class="hint">{{localize 'INVINCIBLE.Automation.FIELDS.macro.drop'}}</label>
    {{/if}}
  </div>
</div>