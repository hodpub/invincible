<section class='tab scrollable automations {{tab.cssClass}}' data-group='primary' data-tab='automations'>
  <div class="form-group">
    <label>
      <a class='automation-create' data-action='createAutomation' data-origin="{{@root.item.uuid}}">
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='Automation'}}
      </a>
    </label>
  </div>

  {{#each system.automations as | automation |}}
  <details data-automation-id="{{@key}}" {{#if automation.open}}open{{/if}}>
    <summary>
      {{automation.name}}
    </summary>
    <div class="form-group">
      <label>{{localize "INVINCIBLE.Automation.Type.label"}}</label>
      <div class="form-fields">
        <input type="text" disabled value="{{ localize (concat "INVINCIBLE.Automation.Type." automation.type) }}">
      </div>
    </div>
    <div class="form-group">
      <label for="system.automations.{{@key}}.name">{{localize "Name"}}</label>
      <div class="form-fields">
        <input type="text" name="system.automations.{{@key}}.name" value="{{automation.name}}">
      </div>
    </div>
    <div class="form-group">
      <label for="system.automations.{{@key}}.showAsSelection">{{localize
        "INVINCIBLE.Automation.FIELDS.showAsSelection.label"}}</label>
      <input type="checkbox" name="system.automations.{{@key}}.showAsSelection" {{checked
        automation.showAsSelection}} />
    </div>
    {{> (concat "systems/invincible/templates/item/automation-parts/" automation.type ".hbs") automation=automation
    key=@key}}

    <a class='delete' data-action='deleteAutomation' data-tooltip='{{localize "DOCUMENT.Delete" type='
      Automation'}}'>
      {{localize 'DOCUMENT.Delete' type='Automation'}}
      <i class='fas fa-trash'></i>
    </a>

  </details>
  {{/each}}
</section>